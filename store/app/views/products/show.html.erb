<% cache @product do %>
    <h1><%=@product.name %></h1>
<% end %>

<%=link_to "Back to products", products_path %>

<% if authenticated? %>
    <%= link_to "Edit Product", edit_product_path(@product) %>
    <%= button_to "Delete Product", @product, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
<% end %>
